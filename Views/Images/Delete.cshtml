@model Crud_Images.Models.Image

@{
    ViewData["Title"] = "Delete";
}


<h1 style="color:red">Delete</h1>

<h3 style="color:blueviolet">Are you sure you want to delete this?</h3>
<div>
    <h4 style="color:darkmagenta">Image</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Image Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageName)
        </dd>
        <dt class="col-sm-2">
            Uploaded Image
        </dt>
        <dd class="col-sm-10">

            <img decoding="async" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)" asp-append-version="true" width="250" height="250" />
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ImageId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <a asp-action="Index" style="background-color: #4caf50; color: #fff; padding: 8px 16px; border: none; border-radius: 4px; text-decoration: none; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">Back to List</a>
    </form>
</div>
